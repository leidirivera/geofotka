<h1>Editing profile</h1>

<%= error_messages_for :profile %>

<% form_for(@profile) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', :action => 'profile',
  :controller => 'users', :id => @profile.user %>
