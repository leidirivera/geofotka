<h1>Editing user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>Login</b><br />
    <%= f.text_field :login %>
  </p>
  
  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>
  
  <p>
    <b>Level</b><br />
    <%= f.text_field :level %>
  </p>  
  
  <p>
    <b>Blocked</b><br />
    <%= f.check_box :blocked %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
